# Setting Laptop screen scale
output eDP-1 {
    scale 1.0
}

# Setting Backgrounds
output * bg $HOME/.config/sway/backgrounds/alena-aenami-7p-m-1k.jpg fill

# Removing titlebar
default_border none
default_floating_border none

client.focused #414868 #414868 #C0CAF5
client.unfocused #24283B #24283B #C0CAF5

# Setting Gaps
gaps outer 10
gaps inner 10

# Enabling vscode transparency
for_window [app_id="code"] opacity 0.95

# Configuring Bar
bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command i3blocks

    colors {
        statusline #C0CAF5
        background #24283B
        focused_workspace #414868 #414868 #C0CAF5
        inactive_workspace #24283B #24283B #5C5C5C
    }
}
